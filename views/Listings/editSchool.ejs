<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="col-8 offset-3">
    <h3>Edit School Details:</h3>
    <form method="POST" action="/school/<%= schoollisting._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="row">
        <div class="col-md-4">
          <label for="name" class="form-label" style="color: #121212">Name:</label>
          <input
            type="text"
            id="name"
            name="schoollisting[name]"
            class="form-control mb-3"
           x
            value="<%= schoollisting.name %>"
            required
          />

          
        </div>
        <div class="col-md-8">
          <label for="dean" class="form-label" style="color: #121212">Dean:</label>
          <input
            type="text"
            id="dean"
            name="schoollisting[dean]"
            class="form-control mb-3"
            value="<%= schoollisting.dean %>"
            required
          />

          <label for="location" class="form-label" style="color: #121212">Location:</label>
          <input
            type="text"
            id="location"
            name="schoollisting[location]"
            class="form-control mb-3"
            value="<%= schoollisting.location %>"
            required
          />
        </div>
      </div>
      <label for="description" class="form-label" style="color: #121212">Description:</label>
      <textarea
         
        id="description"
        name="schoollisting[description]"
        class="form-control mb-3"
        required 
      >
<%= schoollisting.description %></textarea
      >

      <label for="website" class="form-label" style="color: #121212">Website:</label>
      <input
        type="text"
        id="website"
        name="schoollisting[website]"
        class="form-control mb-3"
        value="<%= schoollisting.website %>"
        required
      />
      <div class="mb-3">
        <label for="image" class="form-label" style="color: #121212"
          >Upload New Image:</label
        >
        <input name="schoollisting[image]" type="file" class="form-control" />
      </div>

      <a href="/school/<%= schoollisting._id %>"
        ><button class="btn btn-dark" type="submit">Save Changes</button></a
      >
    </form>
  </div>
</body>