

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      body {
        background-color: #0f3d5c !important;
        background-image: url("https://igniteindiaeducation.com/wp-content/uploads/2021/08/AJEENKYA-DY-PATIL1.png");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
      }

      .homePg {
        background-image: url("https://igniteindiaeducation.com/wp-content/uploads/2021/08/AJEENKYA-DY-PATIL1.png");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        padding: 0;
        margin: 0;
      }

      .horizontal-card {
        height: 20rem;
        margin: 2rem auto;
        display: flex;
        flex-direction: column;
        width: 90%;
        max-width: 800px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        /* background-color: rgba(225, 225, 255, 0.9); */
      }

      @media (min-width: 768px) {
        .horizontal-card {
          flex-direction: row;
          margin: 8rem auto;
        }
      }

      .slogan-section {
        flex: 1;
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: rgba(230, 230, 255, 0.885);
        border-right: 1px solid #dee2e6;
      }

      .slogan-section h4 {
        font-size: 1rem;
        text-align: center;
      }

      .slogan-section p {
        margin-top: 10px;
        font-size: 1rem;
        color: #6c757d;
      }

      .login-section {
        font-size: 1rem;
        flex: 1;
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }

      .login-section form {
        width: 100%;
        max-width: 300px;
      }

      .login-section input[type="text"],
      .login-section input[type="password"],
      .login-section input[type="email"] {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ced4da;
        border-radius: 5px;
      }

      .login-section input[type="submit"] {
        background-color: #0056b3;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
      }

      .login-section input[type="submit"]:hover {
        background-color: #004494;
      }

      @media (max-width: 767px) {
        .slogan-section {
          display: none;
        }
      }
    </style>
  </head>
  <body>
    <div class="homePg">
      <div class="horizontal-card">
        <div class="slogan-section">
          <h4 id="slogan-text">
            "Education is the passport to the future, for tomorrow belongs to
            those who prepare for it today."
          </h4>
          <p id="slogan-author"><i>--Malcolm</i></p>
        </div>

        <div class="login-section">
          <!-- <h4>SignUp on CampusConnect</h4> -->
          <form
            action="/SignUp"
            method="POST"
            class="needs-validation"
            novalidate
          >
            <label for="username" class="form-label"></label>
            <input
              name="username"
              id="username"
              type="text"
              class="form-control"
              placeholder="Username"
              required
            />
            <div class="valid-feedback">Looks good!</div>

            <label for="email" class="form-label"></label>
            <input
              name="email"
              id="email"
              type="email"
              class="form-control"
              placeholder="Email"
              required
            />

            <label for="password" class="form-label"></label>
            <input
              name="password"
              id="password"
              type="password"
              class="form-control"
              placeholder="Password"
              required
            />

            <button class="btn btn-primary mb-3" type="submit">Sign Up</button>
          </form>
        </div>
      </div>
    </div>
    <script>
      async function fetchSlogan() {
        try {
          const response = await fetch("https://api.quotable.io/random");
          const data = await response.json();
          document.getElementById(
            "slogan-text"
          ).innerText = `"${data.content}"`;
          document.getElementById(
            "slogan-author"
          ).innerText = `-${data.author}`;
        } catch (error) {
          console.log("Error");
        }
      }
      fetchSlogan();
      setInterval(fetchSlogan, 60000);
    </script>
  </body>
</html>
